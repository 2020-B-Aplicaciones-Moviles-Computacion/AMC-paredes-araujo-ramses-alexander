<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activEntren.VistaCrearEntrenador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_crear_entrenador"
            android:layout_width="605dp"
            android:layout_height="37dp"
            android:text="@string/crear_entrenador_titulo"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="577dp"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_crear_nombre_entrenador"
                android:layout_width="230dp"
                android:layout_height="39dp"
                android:text="@string/crear_entrenador_nombre"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_crear_entrenador_nombre"
                android:layout_width="287dp"
                android:layout_height="41dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/crear_entrenador_nombre_help" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="606dp"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:text="@string/crear_entrenador_id"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_crear_entrenador_id"
                android:layout_width="294dp"
                android:layout_height="42dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/crear_entrenador_id_help" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="565dp"
            android:layout_height="33dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="215dp"
                android:layout_height="30dp"
                android:text="@string/crear_entrenador_genero"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radg_entrenador_genero"
                android:layout_width="298dp"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_entrenador_M"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/crear_entrenador_genero_hombre" />

                <RadioButton
                    android:id="@+id/rb_entrenador_F"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/crear_entrenador_genero_mujer" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="529dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="215dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:text="@string/crear_entrenador_fechaNac"
                android:textSize="18sp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="259dp"
                android:layout_height="44dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btn_crear_entrenador_sel_fecha"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/crear_entrenador_fechaNac_but" />

                <TextView
                    android:id="@+id/tv_crear_entrenador_fechaNac"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="@string/crear_entrenador_fechaNac_help" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="57dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_crear_nuevo_entrenador"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="@string/btn_aceptar" />

            <Button
                android:id="@+id/btn_cancelar_crear_entrenador"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="@string/btn_salir" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>