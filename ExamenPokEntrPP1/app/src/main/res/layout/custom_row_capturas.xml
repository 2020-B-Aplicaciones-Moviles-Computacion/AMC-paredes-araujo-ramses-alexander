<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_layout_capturas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/ll_layout_entrenadores"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cr_contador_capturas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ejemplo_tv_lista_entrenadores_num"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nPokedex_guia_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_lista_capturas_Npokedex" />

                    <TextView
                        android:id="@+id/tv_nombre_pokemon_guia_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_lista_capturas_nombre" />

                    <TextView
                        android:id="@+id/tv_genero_guia_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_lista_capturas_genero" />

                    <TextView
                        android:id="@+id/tv_nivel_guia_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_lista_capturas_nivel" />

                    <TextView
                        android:id="@+id/tv_fecha_guia_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_lista_capturas_fecha_captura" />

                    <TextView
                        android:id="@+id/tv_tipo_pokeball_guia_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_lista_capturas_tipo_pokeball" />

                    <TextView
                        android:id="@+id/tv_life_points_guia_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_lista_capturas_life_points" />

                    <TextView
                        android:id="@+id/tv_fuerza_guia_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tv_lista_capturas_fuerza" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nPokedex_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1:" />

                    <TextView
                        android:id="@+id/tv_nombre_pokemon_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bulbasaur" />

                    <TextView
                        android:id="@+id/tv_genero_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="F" />

                    <TextView
                        android:id="@+id/tv_nivel_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10" />

                    <TextView
                        android:id="@+id/tv_fecha_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="08/01/2021" />

                    <TextView
                        android:id="@+id/tv_tipo_pokeball_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UltraBall" />

                    <TextView
                        android:id="@+id/tv_life_points_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="300" />

                    <TextView
                        android:id="@+id/tv_fuerza_listado_capturas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="38" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>