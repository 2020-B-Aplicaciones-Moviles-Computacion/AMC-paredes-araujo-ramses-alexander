<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activPokemon.VistaEditarPokemon">


    <TextView
        android:id="@+id/tv_titulo_editar_pokemon"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:text="@string/editar_pokemon_titulo"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/crear_pokemon_nPokedex"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo_editar_pokemon"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo_editar_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_editar_pokemon" />

    <EditText
        android:id="@+id/et_editar_pokemon_nPokedex"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/crear_pokemon_nombre"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_editar_pokemon_nPokedex"
        app:layout_constraintStart_toStartOf="@+id/et_editar_pokemon_nPokedex"
        app:layout_constraintTop_toBottomOf="@+id/et_editar_pokemon_nPokedex" />

    <EditText
        android:id="@+id/et_editar_pokemon_nombre"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/crear_pokemon_tipo"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_editar_pokemon_nombre"
        app:layout_constraintStart_toStartOf="@+id/et_editar_pokemon_nombre"
        app:layout_constraintTop_toBottomOf="@+id/et_editar_pokemon_nombre" />

    <Spinner
        android:id="@+id/sp_tipo_pokemon_editar"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/crear_pokemon_altura"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/sp_tipo_pokemon_editar"
        app:layout_constraintStart_toStartOf="@+id/sp_tipo_pokemon_editar"
        app:layout_constraintTop_toBottomOf="@+id/sp_tipo_pokemon_editar" />

    <EditText
        android:id="@+id/etn_editar_pokemon_altura"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/crear_pokemon_peso"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/etn_editar_pokemon_altura"
        app:layout_constraintStart_toStartOf="@+id/etn_editar_pokemon_altura"
        app:layout_constraintTop_toBottomOf="@+id/etn_editar_pokemon_altura" />

    <EditText
        android:id="@+id/etn_editar_pokemon_peso"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/etn_editar_pokemon_peso"
        app:layout_constraintStart_toStartOf="@+id/etn_editar_pokemon_peso"
        app:layout_constraintTop_toBottomOf="@+id/etn_editar_pokemon_peso">

        <Button
            android:id="@+id/btn_aceptar_editar_pokemon"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_aceptar" />

        <Button
            android:id="@+id/btn_cancelar_editar_pokemon"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_salir" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>