<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cv_layout_libreria"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="1dp"
android:clickable="true"
android:focusable="true"
android:foreground="?selectableItemBackground">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/iv_libreria"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:textAlignment="viewStart"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_libreria_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:layout_margin="1dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_libreria_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Desarrollador" />

        <TextView
            android:id="@+id/tv_libreria_type"
            android:layout_width="match_parent"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"
            android:text="tipo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_publication_comment_date_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/palabra_agregado" />

            <TextView
                android:id="@+id/tv_publication_comment_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="22/22/2222" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>