<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="129dp"
        android:layout_height="40dp"
        android:background="@color/back"
        android:text="@string/mensaje"
        android:textColor="@color/letras"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <Button
        android:id="@+id/button_ir_ciclo_vida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Ciclo Vida"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <Button
        android:id="@+id/bnt_ir_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="List view"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintStart_toStartOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_ciclo_vida" />

    <Button
        android:id="@+id/btn_ir_intent_explicito_parametros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="I. EXP PARAM"
        app:layout_constraintEnd_toEndOf="@+id/bnt_ir_list_view"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/bnt_ir_list_view"
        app:layout_constraintTop_toBottomOf="@+id/bnt_ir_list_view" />

    <Button
        android:id="@+id/btn_ir_intent_con_respuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Ir intent respusta"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_intent_explicito_parametros"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_intent_explicito_parametros"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_intent_explicito_parametros" />

</androidx.constraintlayout.widget.ConstraintLayout>